{
  "version": "1.0.0",
  "name": "min-cap",
  "module": "index.ts",
  "type": "module",
  "main": "src/electron/main.js",
  "private": true,
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7",
    "@capacitor/core": "^7",
    "@types/bun": "latest",
    "dotenv": "^17.2.4",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "serve": "^14.2.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "mkdir -p out && cp -r src/app out/",
    "serve": "serve out/app",
    "electron-run": "electron src/electron/main.js",
    "electron-build": "electron-builder build",
    "devcontainer": "podman-compose -f \"$PWD/.devcontainer/compose.yaml\" run --rm --build devcontainer bash",
    "android-setup": "podman-compose -f \"$PWD/.devcontainer/compose.yaml\" run --rm --build devcontainer node src/android/setup.js",
    "android-build": "podman-compose -f \"$PWD/.devcontainer/compose.yaml\" run --rm --build devcontainer node src/android/build.js"
  }
}
